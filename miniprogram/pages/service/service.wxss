/* pages/service/service.wxss */

.rightList {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.peopleItem {
  /* 上右下左 */
  display: flex;
  flex-direction: row;
  margin: 10rpx 5rpx;
  padding: 10rpx 10rpx;
  width: 80%;
  background-color: white;
  box-shadow: 2px 2px 2px 2px #babdee;
  /*for Android*/
  -webkit-box-shadow: 2px 2px 10px 3px #babdee;
  /*for IOS*/
  border-radius: 10rpx;
}

.jobItem {
  /* 上右下左 */
  display: flex;
  flex-direction: column;
  margin: 10rpx 5rpx;
  padding: 10rpx 15rpx;
  width: 80%;
  background-color: white;
  box-shadow: 2px 2px 2px 2px #babdee;
  /*for Android*/
  -webkit-box-shadow: 2px 2px 10px 3px #babdee;
  /*for IOS*/
  border-radius: 10rpx;
}

.job_item_row {
  display: flex;
  font-size: 14px;
  margin: 8rpx 0;
}

.imageView {
  width: 130rpx;
  height: 130rpx;
  margin: 30rpx 20rpx;
}

.contentView>view {
  margin-top: 10rpx;
}
#info {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-end;
}
#info view {
  margin-right: 10rpx;
}
.infoButton {
  margin: 60px 50px;
  background-color: #999fff;
  color: #333;
  font-size: 16px;
  height: 40px;
  line-height: 40px;
  border-radius: 20px;
}