<!--pages/service/service.wxml-->
<view  wx:if="{{isLogin}}">
  <van-tree-select
  items="{{ items }}"
  height="100%"
  main-active-index="{{ mainActiveIndex }}"
  active-id="{{ activeId }}"
  bind:click-nav="onClickNav"
  bind:click-item="onClickItem"
>

<view class="peopleList" slot="content" wx:for="{{dataArr}}">
  <view class="peopleItem" bindtap="itemClickHandle" id="{{index}}">
    <view class="imageView">
      <image src="../../images/people03.png" mode="aspectFit" style="width: 100%; height: 100%"></image>
    </view>
    <view class="contentView">
      <view style="font-size: 15px">{{item.name}}</view>
      <view style="font-size: 14px">推荐指数：
        <van-rate value="5" size="{{ 14 }}" readonly allow-half color="#ee0a24" void-color="#eee"
          void-icon="star" />
      </view>
      <view style="font-size: 12px; color: #999">点击咨询详情</view>
    </view>
  </view>
</view>
</van-tree-select>
</view>
<view wx:else>
  <button class="infoButton" bindtap="userInfoClick">完善信息才可使用功能</button>
</view>