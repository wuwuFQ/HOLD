/* pages/collection/collection.wxss */


.rightList {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.peopleItem {
  /* 上右下左 */
  display: flex;
  flex-direction: row;
  margin: 20rpx 5rpx;
  width: 90%;
  background-color: white;
  box-shadow: 2px 2px 2px 2px #babdee;
  /*for Android*/
  -webkit-box-shadow: 2px 2px 10px 3px #babdee;
  /*for IOS*/
  border-radius: 10rpx;
}

.job_item_row {
  display: flex;
  font-size: 14px;
  margin: 8rpx 0;
}

.imageView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  font-size: 16px;
  text-align: center;
  background-color: rgba(40, 228, 228, 0.178);
  padding: 5px 8rpx;
}

.contentView{
  margin: 10rpx 20rpx;
}
.contentView>view {
  margin-top: 10rpx;
}
#info {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-end;
}
#info view {
  margin-right: 10rpx;
}