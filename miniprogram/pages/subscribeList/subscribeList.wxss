/* pages/subscribeList/subscribeList.wxss */


.rightList {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.peopleItem {
  /* 上右下左 */
  display: flex;
  flex-direction: row;
  margin: 20rpx 5rpx;
  width: 90%;
  min-height: 100px;
  background-color: white;
  box-shadow: 2px 2px 2px 2px #babdee;
  /*for Android*/
  -webkit-box-shadow: 2px 2px 10px 3px #babdee;
  /*for IOS*/
  border-radius: 10rpx;
}

.job_item_row {
  display: flex;
  font-size: 14px;
  margin: 8rpx 0;
}

.imageView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 250rpx;
  font-size: 16px;
  text-align: center;
  background-color: rgb(235, 241, 241);
  padding: 5px 8rpx;
}

.contentView{
  margin: 10rpx 20rpx;
}
.contentView>view {
  margin-top: 10rpx;
}

.section_title {
  margin: 20rpx 0rpx;
  width: 90%;
}


.safeBottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}