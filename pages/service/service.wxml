<!--pages/service/service.wxml-->

<view class="peopleList" wx:for="{{10}}">
  <view class="peopleItem" bindtap="itemClickHandle" id="{{index}}">
    <view class="imageView">
      <image src="../../images/people02.png" mode="aspectFit" style="width: 100%; height: 100%"></image>
    </view>
    <view class="contentView">
      <view style="font-size: 15px">维修师：杨师傅</view>
      <view style="font-size: 14px">推荐指数：
        <van-rate value="{{ 4.5 }}" size="{{ 14 }}" readonly allow-half color="#ee0a24" void-color="#eee"
          void-icon="star" />
      </view>
      <view style="font-size: 12px; color: #999">点击联系他</view>
    </view>
  </view>
</view>