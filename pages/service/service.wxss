/* pages/service/service.wxss */

.peopleList {
  display: flex;
  flex-direction: column;
  align-items: center;
  }
  
  .peopleItem {
    /* 上右下左 */
    display: flex;
    flex-direction: row;
    margin: 20rpx 10rpx ;
    padding: 20rpx 20rpx;
    width: 80%;
    background-color: white;
    box-shadow: 2px 2px 2px 2px rgb(245, 244, 228); /*for Android*/
    -webkit-box-shadow: 2px 2px 10px 3px rgb(231, 229, 203); /*for IOS*/
    border-radius: 10rpx;
  
  }

  .imageView {
    width: 130rpx;
    height: 130rpx;
    margin: 30rpx 20rpx;
  }
  
  .contentView > view {
    margin-top: 10rpx;
  }